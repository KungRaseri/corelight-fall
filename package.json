{
	"name": "rpg-playground",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "npm run test:unit && npm run test:integration && npm run test:e2e",
		"test:unit": "vitest run --project unit",
		"test:unit:watch": "vitest watch --project unit",
		"test:integration": "vitest run --project integration",
		"test:integration:watch": "vitest watch --project integration",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:chromium": "playwright test --project=chromium",
		"test:e2e:firefox": "playwright test --project=firefox",
		"test:e2e:webkit": "playwright test --project=webkit",
		"test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
		"test:e2e:report": "playwright show-report",
		"test:coverage": "vitest run --coverage",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:seed": "tsx ./src/lib/server/db/seeds/seed.ts",
		"generate:barrels": "barrelsby --delete --directory src/lib/server/db/schema --recursive --template barrel-template.hbs"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@skeletonlabs/skeleton": "^4.4.1",
		"@skeletonlabs/skeleton-svelte": "^4.4.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.9",
		"@types/node": "^22.15.17",
		"@vitest/browser": "^4.0.10",
		"@vitest/coverage-v8": "^4.0.10",
		"barrelsby": "^2.8.1",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.30.2",
		"drizzle-seed": "^0.3.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"lucide-svelte": "^0.554.0",
		"mdsvex": "^0.12.6",
		"playwright": "^1.51.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.43.12",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.2.2",
		"vitest": "^4.0.10"
	},
	"dependencies": {
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@xyflow/svelte": "^1.1.0",
		"drizzle-orm": "^0.40.0",
		"postgres": "^3.4.5"
	}
}